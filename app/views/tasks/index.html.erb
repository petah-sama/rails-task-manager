<h1>My tasks</h1>

<ul style="font-size: 18px;">
  <% @tasks.each do |task| %>
    <li style="list-style: none; background-color: lightgray; margin-bottom: 10px; padding: 5px;">
      <%= link_to "#{task.title}", task_path(task.id) %><br>
      <% if task.completed %>
        <i class="far fa-check-square"></i>
      <% else %>
        <i class="far fa-square"></i>
      <% end %>
      <em>"<%= task.details %>"</em>
      <span style="font-size: 30px; text-decoration: none;"><%= link_to "☠️", task_path(task.id), method: :delete, data: { confirm: 'Are you sure?' } %></span>
    </li>
  <% end %>
</ul>

<p style="text-decoration: none;"><%= link_to 'Add a new task', new_path %></p>

